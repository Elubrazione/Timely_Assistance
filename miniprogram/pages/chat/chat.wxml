<!--pages/chat/chat.wxml-->

<view wx:for="{{allmessage}}" >
  <view wx:if="{{item.sender == myname}}">
    <view class="onechat1">
      <view class="rightpart">
        <view class="username1">{{item.sender}}</view>
        <view class="out">
          <view class="content">{{item.content}}</view>
        </view>
      </view>
      <view><image src="../../icon/user-unlogin.png" class="chatimg"></image></view>
    </view>
  </view>
  <view wx:if="{{item.sender == yourname}}">
    <view class="onechat2">
      <view><image src="../../icon/user-unlogin.png" class="chatimg"></image></view>
      <view class="rightpart">
        <view class="username2">{{item.sender}}</view>
        <view class="out">
          <view class="content">{{item.content}}</view>
        </view>
      </view>
    </view>
  </view>
</view>



<view style="height:130rpx;"></view>
  <form bindsubmit="formSubmit" style="position:fixed;bottom:0;">
    <view class='buttom'>
      <view class='inp'>
        <!-->
        <image src='/images/topic/fb.png'></image>
        <-->
        <view class="block"></view>
          <input name="userName" value="{{inputMessage}}" cursor-spacing="20"></input>
      </view>
      <button form-type="submit">
        <text class='fb'>发送</text>
      </button>
    </view>
  </form>